<form action='<%=url%>' method="post">
  <% if cat.persisted? %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <label>Name:
    <input type="text" name="cat[name]" value='<%=cat.name%>'>
  </label>
  
  <br>
  <label>Sex:
    <input type="radio" name="cat[sex]" value="M" <%= cat.sex == 'M' ? 'checked' : ""  %> >M
    <input type="radio" name="cat[sex]" value="F" <%= cat.sex == 'F' ? 'checked' : ""  %> >F
  </label>
  
  <br>
  
  <label>Color:
    <select name="cat[color]">
      <option value="" disabled>--Select a Color--</option>
      <option value="white" <%= cat.color == 'white' ? 'selected' : ""  %> >White</option>
      <option value="black" <%= cat.color == 'black' ? 'selected' : ""  %> >Black</option>
      <option value="brown" <%= cat.color == 'brown' ? 'selected' : ""  %> >Brown</option>
      <option value="gray" <%= cat.color == 'gray' ? 'selected' : ""  %> >Gray</option>
      <option value="red" <%= cat.color == 'red' ? 'selected' : ""  %> >Red</option>
      <option value="calico" <%= cat.color == 'calico' ? 'selected' : ""  %> >Calico</option>
    </select>
  </label>
  
  <br>
  
  <label>Birthdate
    <input type="date" name="cat[birth_date]" value="<%=cat.birth_date%>">
  </label>
  
  <br>
  
  <label>Description:
    <br>
    <textarea name="cat[description]" rows="8" cols="80"> <%= cat.description %> </textarea>
  </label>
  
  <br>
  
  <input type="submit" value="<%= submit %>" >
  
</form>